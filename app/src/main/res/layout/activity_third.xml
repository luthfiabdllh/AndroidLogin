<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="50dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/jakartab"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/txt_login"
        app:srcCompat="@drawable/user_foreground"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/img_profile"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        />
    <EditText
        android:id="@+id/edt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Ahmad Abdilla"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_username"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        />

    <TextView
        android:id="@+id/txt_gende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/edt_username"
        android:textColor="@color/grey"
        android:layout_centerInParent="true">
    </TextView>

    <EditText
        android:id="@+id/edt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_gende"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/txt_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="12dp"
        android:fontFamily="@font/jakartar"
        android:layout_below="@id/edt_gender"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp">
    </TextView>

    <EditText
        android:id="@+id/edt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="insert your number"
        android:textSize="20dp"
        android:fontFamily="@font/jakartam"
        android:layout_below="@id/txt_bio"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="251dp"
        android:layout_height="40dp"
        android:layout_below="@id/edt_number"
        android:background="@drawable/mainbtn"
        android:text="next"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:fontFamily="@font/jakartab"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        />

</RelativeLayout>